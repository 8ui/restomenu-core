{
  "name": "@resto-menu/core",
  "version": "0.0.1",
  "private": false,
  "publishConfig": {
    "registry": "https://gitlab.com/api/v4/projects/62384896/packages/npm/",
    "@resto-menu:registry": "https://gitlab.com/api/v4/projects/62384896/packages/npm/"
  },
  "type": "module",
  "description": "Shared domain logic, types, and utilities for Restomenu applications",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/",
    "graphql/",
    "tsconfig/",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "import": "./src/types/index.ts"
    },
    "./graphql": {
      "types": "./src/graphql/index.ts",
      "import": "./src/graphql/index.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "import": "./src/utils/index.ts"
    },
    "./constants": {
      "types": "./src/constants/index.ts",
      "import": "./src/constants/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "import": "./src/hooks/index.ts"
    },
    "./schema.graphqls": "./graphql/schema.graphqls"
  },
  "scripts": {
    "build": "tsc",
    "codegen": "graphql-codegen",
    "test": "jest",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "typescript",
    "graphql",
    "shared",
    "utilities",
    "types",
    "restomenu"
  ]
}
