{
  "name": "@restomenu/core",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "description": "Shared domain logic, types, and utilities for Restomenu applications",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/",
    "graphql/",
    "tsconfig/",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "import": "./src/types/index.ts"
    },
    "./graphql": {
      "types": "./src/graphql/index.ts",
      "import": "./src/graphql/index.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "import": "./src/utils/index.ts"
    },
    "./constants": {
      "types": "./src/constants/index.ts",
      "import": "./src/constants/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "import": "./src/hooks/index.ts"
    },
    "./schema.graphqls": "./graphql/schema.graphqls"
  },
  "scripts": {
    "build": "tsc",
    "codegen": "graphql-codegen",
    "test": "jest",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.25.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "react-dom": "^19.1.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "typescript",
    "graphql",
    "shared",
    "utilities",
    "types",
    "restomenu"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/8ui/restomenu-core.git"
  }
}
